<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" 
	android:layout_width="fill_parent"
	android:layout_height="fill_parent" 
	android:fillViewport="true">
	
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF">
	
	<ImageView android:id="@+id/icon_listRowIcon"
		android:layout_width="fill_parent"
		android:paddingLeft="2px"
		android:paddingRight="2px"
		android:paddingTop="2px"
		android:paddingBottom="5px"
		android:layout_height="wrap_content"
		android:src="@drawable/fi_logo" /> 	
    
    <TextView  android:id="@+id/txtView_msg"
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content"
	    android:textSize="15sp" 
	    android:textStyle="bold"
	    android:textColor="#000000"/>
    
    <TextView
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content"
	    android:text="@string/user_name" 
	    android:textSize="15sp"
	    android:paddingTop="5px"
	    android:textColor="#000000"/>
	    
	<LinearLayout
		android:id="@+id/horizontalLine"
		android:layout_width="85px"
		android:layout_height="1dip"
		android:background="#00FF00"/>
	    
	<TextView android:id="@+id/txtView_phoneNumber"
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content" 
	    android:textSize="12sp"
	    android:paddingTop="3px"
	    android:textColor="#000000"/>
	
	<TextView
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content"
	    android:text="@string/pswd" 
	    android:textSize="15sp"
	    android:paddingTop="5px"
	    android:textColor="#000000"/>
	
	<LinearLayout
		android:id="@+id/horizontalLine"
		android:layout_width="117px"
		android:layout_height="1dip"
		android:background="#00FF00"/>
	    
	<EditText android:id="@+id/editTxt_pswd" 
		android:maxLines="1" 
	    android:layout_marginTop="2dip"
	    android:layout_width="wrap_content"
	    android:ems="25"
	    android:layout_height="wrap_content" 
	    android:autoText="true"
	    android:scrollHorizontally="true"
	    android:password="true" 
	    android:padding="5px"/>
	    
	<TextView android:id="@+id/txtView_pswdConfirm"
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content"
	    android:text="@string/confirm_pswd" 
	    android:textSize="15sp"
	    android:paddingTop="5px"
	    android:textColor="#000000"/>
	    
	<LinearLayout
		android:id="@+id/horizontalLine_pswdConfirm"
		android:layout_width="137px"
		android:layout_height="1dip"
		android:background="#00FF00"/>
	    
	<EditText android:id="@+id/editTxt_pswdConfirm" 
		android:maxLines="1" 
	    android:layout_marginTop="2dip"
	    android:layout_width="wrap_content"
	    android:ems="25"
	    android:layout_height="wrap_content" 
	    android:autoText="true"
	    android:scrollHorizontally="true"
	    android:password="true"
	    android:padding="5px" />
	    
	<TextView android:id="@+id/txtView_pswdHint"
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content"
	    android:text="@string/hint" 
	    android:textSize="15sp"
	    android:paddingTop="5px"
	    android:textColor="#000000"/>
	    
	<LinearLayout
		android:id="@+id/horizontalLine_hint"
		android:layout_width="150px"
		android:layout_height="1dip"
		android:background="#00FF00"/>
	    
	<EditText android:id="@+id/editTxt_pswdHint" 
		android:maxLines="1" 
	    android:layout_marginTop="2dip"
	    android:layout_width="wrap_content"
	    android:ems="25"
	    android:layout_height="wrap_content" 
	    android:autoText="true"
	    android:scrollHorizontally="true"
	    android:padding="5px"/>
        
   <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:stretchColumns="1">
    <TableRow>
        <TextView android:id="@+id/txtView_forgotPswd"
        	android:layout_gravity="left"
        	android:text="@string/forgotPswd" 
        	android:padding="3dip"
        	android:textSize="15sp"
        	android:textColor="#000000"/>
        
    	<Button android:id="@+id/btn_login"
        	android:layout_gravity="right"
        	android:text="@string/btn_login" 
        	android:layout_alignParentBottom="true"
        	android:padding="10dip"/>
    </TableRow>
  </TableLayout>        
</LinearLayout>
</ScrollView>
