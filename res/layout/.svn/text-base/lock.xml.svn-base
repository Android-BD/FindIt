<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" 
	android:layout_width="fill_parent"
	android:layout_height="fill_parent" 
	android:fillViewport="true">
			
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout_lockScreen"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF">
    	
    	<ImageView android:id="@+id/icon_listRowIcon"
		android:layout_width="fill_parent"
		android:paddingLeft="2px"
		android:paddingRight="2px"
		android:paddingTop="2px"
		android:paddingBottom="5px"
		android:layout_height="wrap_content"
		android:src="@drawable/fi_logo" /> 
		
		<TextView android:id="@+id/txtView_errMsg"
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content"
	    android:textStyle="bold"
	    android:textSize="15sp"/>
		    	
    	<Button android:id="@+id/btn_lockEnable"
        android:layout_gravity="left"
        android:text="Enable" 
        android:layout_alignParentBottom="true"
        android:padding="10dip"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"/>
    	
    	<TextView  android:id="@+id/txtView_lockEnableMsg"
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content"
	    android:text="@string/lockEnabled"
	    android:textSize="15sp" 
	    android:textStyle="bold"
	    android:textColor="#000000"/>	
	    
	    <Button android:id="@+id/btn_lock"
        android:layout_gravity="left"
        android:text="Lock" 
        android:layout_alignParentBottom="true"
        android:padding="10dip"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"/>			    
		
		<TextView  android:id="@+id/txtView_lockMsg"
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content"
	    android:textSize="15sp" 
	    android:textStyle="bold"
	    android:textColor="#000000"/>
	    	    
	    <TextView
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content"
	    android:text="@string/lockPswd" 
	    android:textSize="15sp"
	    android:paddingTop="5px"
	    android:textColor="#000000"/>
	    
	    <LinearLayout
		android:id="@+id/horizontalLine"
		android:layout_width="80px"
		android:layout_height="1dip"
		android:background="#00FF00"/>
		
		<EditText android:id="@+id/editTxt_lockPswd" 
		android:maxLines="1" 
	    android:layout_marginTop="2dip"
	    android:layout_width="wrap_content"
	    android:ems="25"
	    android:layout_height="wrap_content" 
	    android:autoText="true"
	    android:scrollHorizontally="true"
	    android:password="true" 
	    android:padding="5px"/>
	    
	    <Button android:id="@+id/btn_lockLogin"
        android:layout_gravity="right"
        android:text="@string/btn_login" 
        android:layout_alignParentBottom="true"
        android:padding="10dip"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"/>
    	
    	<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:stretchColumns="1">
    	<TableRow>
        	<TextView android:id="@+id/txtView_lockCall"
	    	android:layout_gravity="left"
	    	android:text="@string/lockContactOwner"
	    	android:textSize="15sp"
	    	android:textColor="#000000"/>
        
    		<TextView android:id="@+id/txtView_lockCallInfo"
        	android:layout_gravity="left"
        	android:text="@string/lockCall" 
        	android:textSize="15sp"
        	android:paddingTop="2dip"
        	android:textColor="#000000"/>
    	</TableRow>
  		</TableLayout>
	    
	</LinearLayout>	

</ScrollView>
