<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" 
	android:layout_width="fill_parent"
	android:layout_height="fill_parent" 
	android:fillViewport="true">

<LinearLayout 
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="10px" 
    android:scrollbarAlwaysDrawVerticalTrack="true"
    android:background="#FFFFFF">
    
    <TextView android:id="@+id/txtView_aboutTitle"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		android:textSize="25sp" 
		android:textColor="#000000"
		android:text="@string/aboutTitle"
		android:textStyle="bold"/>
	
	<LinearLayout
		android:id="@+id/horizontalLine"
		android:layout_width="150px"
		android:layout_height="1dip"
		android:background="#00FF00"
		android:paddingBottom="25px"/>
   	
	<TextView android:id="@+id/txtView_about"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:textColor="#000000"/>
	
	<TextView android:id="@+id/txtView_featuresTitle"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		android:textSize="25sp" 
		android:textColor="#000000"
		android:text="@string/features"
		android:textStyle="bold"/>
	
	<LinearLayout
		android:id="@+id/horizontalLine"
		android:layout_width="185px"
		android:layout_height="1dip"
		android:background="#00FF00"
		android:paddingBottom="25px"/>
	
	<TextView android:id="@+id/txtView_features"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:textColor="#000000"/>
		
	<TextView android:id="@+id/txtView_workTitle"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		android:textSize="25sp" 
		android:textColor="#000000"
		android:text="@string/howWork"
		android:textStyle="bold"/>
	
	<LinearLayout
		android:id="@+id/horizontalLine"
		android:layout_width="280px"
		android:layout_height="1dip"
		android:background="#00FF00"
		android:paddingBottom="25px"/>
  	
	<TextView android:id="@+id/txtView_howWork"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:textColor="#000000"/>
		
	<TextView android:id="@+id/txtView_securityTitle"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		android:textSize="25sp" 
		android:textColor="#000000"
		android:text="@string/security"
		android:textStyle="bold"/>
	
	<LinearLayout
		android:id="@+id/horizontalLine"
		android:layout_width="175px"
		android:layout_height="1dip"
		android:background="#00FF00"
		android:paddingBottom="25px"/>
  	
	<TextView android:id="@+id/txtView_security"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:textColor="#000000"/>
		
</LinearLayout>
</ScrollView>