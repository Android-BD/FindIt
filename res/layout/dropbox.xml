<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="#FFFFFF">

	<TextView
	  	android:layout_width="wrap_content"
	  	android:layout_height="wrap_content"
	  	android:text="DropBox Account"
	  	android:textSize="25sp"
	  	android:textColor="#000000"/>
	
	<LinearLayout
		android:id="@+id/horizontalLine"
		android:layout_width="200px"
		android:layout_height="1dip"
		android:background="#00FF00"/>

	<TextView
	  	android:text="@string/dropbox_uname"
	  	android:textColor="#000000"
	  	android:layout_width="fill_parent" 
	    android:layout_height="wrap_content"/>
	<EditText
		android:id="@+id/dropbox_uname"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"/>			  	


	<TextView
		android:text="@string/dropbox_password"
		android:textColor="#000000"
		android:layout_width="fill_parent" 
	    android:layout_height="wrap_content"/>
	<EditText
		android:id="@+id/dropbox_password"
		android:password="true"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"/>	


	<Button android:id="@+id/dropbox_btn_update"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/dropbox_btn_update"/>


	<TextView
	  	android:layout_width="fill_parent"
	  	android:layout_height="wrap_content"
	  	android:id="@+id/dropbox_text"
	  	android:textColor="#000000"/>
 
</LinearLayout>
