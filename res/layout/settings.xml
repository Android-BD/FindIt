<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" 
	android:layout_width="fill_parent"
	android:layout_height="fill_parent" 
	android:fillViewport="true">
	
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="#FFFFFF">
  
  <TextView
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content"
	    android:text="Settings" 
	    android:textSize="25sp"
	    android:textColor="#000000"/>
	    
	<LinearLayout
		android:id="@+id/horizontalLine_settingsTitle"
		android:layout_width="85px"
		android:layout_height="1dip"
		android:background="#00FF00"
		android:paddingBottom="10px"/>
	  
  <TextView android:id="@+id/txtView_settingsMsg"
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content"
	    android:textStyle="bold"/>
  
  <TextView android:id="@+id/txtView_settingsUName"
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content"
	    android:text="@string/user_name" 
	    android:textSize="15sp"
	    android:paddingTop="5px"
	    android:textColor="#000000"/>
	    
	<LinearLayout
		android:id="@+id/horizontalLine_settingsUName"
		android:layout_width="85px"
		android:layout_height="1dip"
		android:background="#00FF00"/>
	    
	<TextView android:id="@+id/txtView_settingsNumber"
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content" 
	    android:textSize="12sp"
	    android:paddingTop="3px"
	    android:textColor="#000000"/>
	
	<TextView android:id="@+id/txtView_oldPswd"
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content"
	    android:text="@string/oldPswd" 
	    android:textSize="15sp"
	    android:paddingTop="5px"
	    android:textColor="#000000"/>
	
	<LinearLayout
		android:id="@+id/horizontalLine_oldPswd"
		android:layout_width="135px"
		android:layout_height="1dip"
		android:background="#00FF00"/>
	    
	<EditText android:id="@+id/editTxt_settingsOldPswd" 
		android:maxLines="1" 
	    android:layout_marginTop="2dip"
	    android:layout_width="wrap_content"
	    android:ems="25"
	    android:layout_height="wrap_content" 
	    android:autoText="true"
	    android:scrollHorizontally="true"
	    android:password="true" 
	    android:padding="5px"/>
	    
	<TextView android:id="@+id/txtView_newPswd"
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content"
	    android:text="@string/newPswd" 
	    android:textSize="15sp"
	    android:paddingTop="5px"
	    android:textColor="#000000"/>
	    
	<LinearLayout
		android:id="@+id/horizontalLine_newPswd"
		android:layout_width="110px"
		android:layout_height="1dip"
		android:background="#00FF00"/>
	    
	<EditText android:id="@+id/editTxt_newPswd" 
		android:maxLines="1" 
	    android:layout_marginTop="2dip"
	    android:layout_width="wrap_content"
	    android:ems="25"
	    android:layout_height="wrap_content" 
	    android:autoText="true"
	    android:scrollHorizontally="true"
	    android:password="true"
	    android:padding="5px" />
	    
	<TextView android:id="@+id/txtView_newHint"
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content"
	    android:text="@string/newHint" 
	    android:textSize="15sp"
	    android:paddingTop="5px"
	    android:textColor="#000000"/>
	    
	<LinearLayout
		android:id="@+id/horizontalLine_nHint"
		android:layout_width="145px"
		android:layout_height="1dip"
		android:background="#00FF00"/>
	    
	<EditText android:id="@+id/editTxt_newHint" 
		android:maxLines="1" 
	    android:layout_marginTop="2dip"
	    android:layout_width="wrap_content"
	    android:ems="25"
	    android:layout_height="wrap_content" 
	    android:autoText="true"
	    android:scrollHorizontally="true"
	    android:padding="5px"/>
	
	<TextView android:id="@+id/txtView_ownerName"
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content"
	    android:text="@string/ownerName" 
	    android:textSize="15sp"
	    android:paddingTop="5px"
	    android:textColor="#000000"/>
	    
	<LinearLayout
		android:id="@+id/horizontalLine_ownerName"
		android:layout_width="100px"
		android:layout_height="1dip"
		android:background="#00FF00"/>
	    
	<EditText android:id="@+id/editTxt_ownerName" 
		android:maxLines="1" 
	    android:layout_marginTop="2dip"
	    android:layout_width="wrap_content"
	    android:ems="25"
	    android:layout_height="wrap_content" 
	    android:autoText="true"
	    android:scrollHorizontally="true"
	    android:padding="5px"/>
	    
	<TextView android:id="@+id/txtView_altNumber"
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content"
	    android:text="@string/alternateNumber" 
	    android:textSize="15sp"
	    android:paddingTop="5px"
	    android:textColor="#000000"/>
	    
	<LinearLayout
		android:id="@+id/horizontalLine_altNumber"
		android:layout_width="195px"
		android:layout_height="1dip"
		android:background="#00FF00"/>
	    
	<EditText android:id="@+id/editTxt_altNumber" 
		android:maxLines="1" 
	    android:layout_marginTop="2dip"
	    android:layout_width="wrap_content"
	    android:ems="25"
	    android:layout_height="wrap_content" 
	    android:autoText="true"
	    android:scrollHorizontally="true"
	    android:padding="5px"
	    android:numeric="integer"/>
	
	<Button android:id="@+id/btn_update"
		android:layout_gravity="right"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
        android:text="@string/btn_update" 
        android:layout_alignParentBottom="true"
        android:padding="10dip"/>
  
</LinearLayout>
</ScrollView>